				else{
				$.ajax({

                    type: 'POST',

                    url: "/alter/"+tableName+"&"+value+"&"+colunmName+"&"+CID, //:tableName&:value&:colunmName

                    success: getColunms(id)

                });
				}
            }
            
			else{
                alert("Input is not legal!");
            }
        }
        else if(type=="date") {
            var date = value.toString().substring(0,10);
            var   reg   =   /^(\d{4})-(\d{2})-(\d{2})$/;
            var   str   =   date;
