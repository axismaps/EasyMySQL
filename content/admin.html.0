    function alter(id,tableName,colunmName,value,CID,type){
        if(type=="int"){
            if(!isNaN(value)){
			if(value.length==0){
			$.ajax({

                    type: 'POST',

                    url: "/alter/"+tableName+"&null&"+colunmName+"&"+CID, //:tableName&:value&:colunmName

                    success: getColunms(id)

